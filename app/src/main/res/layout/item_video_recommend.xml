<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/item_home_recommed_girdview"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="wrap_content"
      android:background="#ffffff"
      android:elevation="6dp"
      >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp">
  <ImageView
      android:id="@+id/img_column_icon"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_centerVertical="true"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:elevation="2dp"
      android:layout_marginBottom="10dp" />
    <TextView
        android:id="@+id/tv_column_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginRight="15dp"
        android:textColor="#393939"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:elevation="2dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_column_icon" />
    <RelativeLayout
        android:id="@+id/rl_column_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        >
    <ImageView
        android:id="@+id/img_column_more"
        android:layout_width="15.0dp"
        android:layout_height="15.0dp"
        android:src="@drawable/icon_right_arrow_gray"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:elevation="2dp"
        android:layout_marginRight="12.0dp"
        android:layout_marginBottom="10.0dp" />
    <TextView
        android:id="@+id/tv_column_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#b0b0b0"
        android:layout_marginRight="2.0dp"
        android:text="更多"
        android:elevation="2dp"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_marginTop="10.0dp"
        android:layout_toLeftOf="@+id/img_column_more" />
    </RelativeLayout>
  </RelativeLayout>
  <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_column_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
  </android.support.v7.widget.RecyclerView>
  </LinearLayout>
</LinearLayout>
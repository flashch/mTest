<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.china.one.setting_module.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="16dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <com.china.one.setting_module.view.CircleImageView
            android:id="@+id/civ_headimage"
            leon:border_width="2dp"
            leon:border_color="#ccc"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/timg"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="张麻子"
            android:textSize="16sp"/>
    </LinearLayout>

    <com.china.one.setting_module.view.SettingItem
        android:id="@+id/si_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:isShowUnderLine="false"
        leon:leftText="设置"
        leon:rightStyle="iconSwitch"/>

    <com.china.one.setting_module.view.SettingItem
        android:layout_marginTop="10dp"
        android:id="@+id/si_item_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:isShowRightText="true"
        leon:leftIcon="@drawable/feedback"
        leon:leftText="意见反馈"
        leon:rightText="99+"
        leon:rightTextColor="#cccccc"
        leon:rightTextSize="14sp"/>

    <com.china.one.setting_module.view.SettingItem
        android:id="@+id/si_item_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:isShowRightText="true"
        leon:leftIcon="@drawable/feedback"
        leon:leftText="版本升级"
        leon:rightText="V1.0.0"
        leon:rightTextColor="#cccccc"/>

    <com.china.one.setting_module.view.SettingItem
        android:id="@+id/si_item_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:leftIcon="@drawable/feedback"
        leon:leftText="关于我们"
        leon:rightStyle="iconHide"/>

    <com.china.one.setting_module.view.SettingItem
        android:id="@+id/si_item_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyCheckBox"
        leon:leftIcon="@drawable/feedback"
        leon:leftText="同意条款"
        leon:rightStyle="iconCheck"/>

    <com.china.one.setting_module.view.SettingItem
        android:id="@+id/si_item_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyCheckBox"
        leon:isShowUnderLine="false"
        leon:leftIcon="@drawable/feedback"
        leon:leftText="我的位置"
        leon:rightStyle="iconSwitch"/>
</LinearLayout>
